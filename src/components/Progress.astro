---
export interface Props {
  value: number;
}

const { value } = Astro.props;
const percent: string = String(value) + "%";
---

<div
  class="relative flex h-10 lg:w-3/4 w-full items-center justify-start rounded-full bg-white"
>
  <div class="progress-value m-1 h-8 w-0 items-center rounded-full bg-rose-500">
  </div>
</div>

<!-- someone pls translate this to tailwind -->
<style define:vars={{ percent }}>
  .progress-value {
    animation: load 3s normal forwards;
  }
  @keyframes load {
    0% {
      width: 0;
    }
    100% {
      width: var(--percent);
    }
  }
</style>
